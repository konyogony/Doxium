{
    "$schema": "http://json-schema.org/draft-07/schema#",
    "type": "object",
    "properties": {
        "app-name": {
            "type": "string",
            "description": "The name of the Doxium application.",
            "pattern": "^[a-zA-Z0-9_-]+$",
            "examples": ["my-doxium-app"]
        },
        "github-repo": {
            "type": "string",
            "description": "The GitHub repository to use for the Doxium application. (optional)",
            "pattern": "^$|^https://github\\.com/[a-zA-Z0-9._-]+/[a-zA-Z0-9._-]+/?$",
            "examples": ["https://github.com/username/repo", ""]
        },
        "base-color": {
            "type": "string",
            "description": "The base color to use for the Doxium application.",
            "enum": ["stone", "neutral", "zinc", "gray", "slate"]
        },
        "accent-color": {
            "type": "string",
            "description": "The accent color to use for the Doxium application.",
            "enum": [
                "red",
                "orange",
                "yellow",
                "green",
                "emerald",
                "cyan",
                "blue",
                "indigo",
                "violet",
                "purple",
                "pink"
            ]
        },
        "shiki-theme": {
            "type": "string",
            "description": "The Shiki theme to use for the Doxium application.",
            "enum": [
                "andromeeda",
                "aurora-x",
                "ayu-dark",
                "catppuccin-frappe",
                "catppuccin-latte",
                "catppuccin-macchiato",
                "catppuccin-mocha",
                "dark-plus",
                "dracula",
                "dracula-soft",
                "everforest-dark",
                "everforest-light",
                "github-dark",
                "github-dark-default",
                "github-dark-dimmed",
                "github-dark-high-contrast",
                "github-light",
                "github-light-default",
                "github-light-high-contrast",
                "houston",
                "laserwave",
                "light-plus",
                "material-theme",
                "material-theme-darker",
                "material-theme-lighter",
                "material-theme-ocean",
                "material-theme-palenight",
                "min-dark",
                "min-light",
                "monokai",
                "night-owl",
                "nord",
                "one-dark-pro",
                "one-light",
                "plastic",
                "poimandres",
                "red",
                "rose-pine",
                "rose-pine-dawn",
                "rose-pine-moon",
                "slack-dark",
                "slack-ochin",
                "snazzy-light",
                "solarized-dark",
                "solarized-light",
                "synthwave-84",
                "tokyo-night",
                "vesper",
                "vitesse-black",
                "vitesse-dark",
                "vitesse-light"
            ]
        },
        "home-page": {
            "type": "boolean",
            "description": "Whether to include a home page for the Doxium application."
        },
        "components-alias": {
            "type": "string",
            "description": "The alias to use for the Doxium components.",
            "pattern": "^@/(?:[a-zA-Z0-9_-]+/)*[a-zA-Z0-9_-]+$",
            "examples": ["@/components", "@/path/to/doxium/components"]
        }
    },
    "required": ["app-name", "base-color", "accent-color", "shiki-theme", "home-page", "components-alias"]
}
