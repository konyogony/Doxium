{
    "compilerOptions": {
        "target": "ESNext",
        "module": "ESNext",
        "moduleResolution": "bundler",
        "esModuleInterop": true,
        "forceConsistentCasingInFileNames": true,
        "strict": true,
        "skipLibCheck": true,
        "outDir": "dist",
        "baseUrl": ".",
        "paths": {
            "@/*": ["./src/*"]
        },
        "lib": ["es2022"],
        "sourceMap": true,
        "declaration": true
    },
    "include": ["src"],
    "exclude": ["node_modules", "dist", "**/templates/**/*"]
}
